---
import Layout from '../layouts/Layout.astro';
import Gallery from '../components/Gallery.astro';

// Get the folder name from environment variables
const folderName = import.meta.env.CLOUDINARY_FOLDER_NAME || 'gallery';
---

<Layout 
  title="Quadrados Gallery"
  description="A minimalist black and white photography gallery by Luma Montes"
>
	<Gallery folderName={folderName} />
</Layout>

<style>
	.hero {
		text-align: center;
		padding: 4rem 2rem 2rem;
		border-bottom: 1px solid #000000;
		margin-bottom: 2rem;
	}

	.hero h1 {
		font-size: 3rem;
		font-weight: 300;
		letter-spacing: 0.2em;
		text-transform: uppercase;
		margin-bottom: 1rem;
	}

	.hero p {
		font-size: 1.1rem;
		opacity: 0.7;
		letter-spacing: 0.1em;
	}

	@media (max-width: 768px) {
		.hero {
			padding: 3rem 1rem 1.5rem;
		}
		
		.hero h1 {
			font-size: 2rem;
		}
		
		.hero p {
			font-size: 1rem;
		}
	}
</style>
